<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_repeat"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="88dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnHighscore"
            android:layout_width="88dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnChoosePicture"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:onClick="onChoosePicture" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn3x3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp" />

            <ImageButton
                android:id="@+id/btn4x4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn5x5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <ImageButton
                android:id="@+id/btn6x6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <humaj.michal.util.LandSquareImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"        
        android:layout_height="fill_parent"        
        android:layout_marginLeft="8dp"      
        android:scaleType="centerCrop" />

</LinearLayout>